#!/bin/sh

# This script is use as al fallback in case ~/.xprofile cant be load for some reason

# Restre wallpaper
wallpaper

# Load xresources
xrdb ${XDG_CONFIG_HOME:-$HOME.config}/X11/Xresources

# Backgroundservices
pidof -s emacs || /usr/bin/emacs --daemon &
pidof -s dunst || dunst &
pidof -s dwmblocks || dwmblocks &
pidof -s picom || picom &
pidof -s unclutter || unclutter &
pidof -s udiskie || udiskie  &
pidof -s sxhkd || sxhkd &
